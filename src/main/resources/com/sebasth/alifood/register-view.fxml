<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sebasth.alifood.views.RegisterView"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="372.0" prefWidth="572.0" spacing="15.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
        <children>
            <Label text="Registro de Usuario">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </Label>
            <TextField fx:id="txtUsername" maxWidth="300.0" promptText="Nombre de Usuario" />
            <PasswordField fx:id="txtPassword" maxWidth="300.0" promptText="Contraseña" />
            <PasswordField fx:id="confirmPassword" maxWidth="300.0" promptText="Confirmar Contraseña" />
            <Label fx:id="messageLabel" textFill="darkred" />
            <Button mnemonicParsing="false" onAction="#handleRegister" text="Registrar" />
            <Button mnemonicParsing="false" onAction="#handleReturnToLogin" text="Volver al Login" />
        </children>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </VBox>

</AnchorPane>
